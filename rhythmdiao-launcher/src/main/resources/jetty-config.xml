<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="servletContextHandler" class="org.eclipse.jetty.servlet.ServletContextHandler">
        <property name="contextPath" value="/"/>
    </bean>

    <bean name="server" class="org.eclipse.jetty.server.Server"
          init-method="start" destroy-method="stop">
        <property name="threadPool">
            <bean class="org.eclipse.jetty.util.thread.QueuedThreadPool">
                <property name="minThreads" value="#{appCfg.jettyEnvCfg.minThreads()}"/>
                <property name="maxThreads" value="#{appCfg.jettyEnvCfg.maxThreads()}"/>
            </bean>
        </property>
        <property name="connectors">
            <list>
                <bean name="connector" class="org.eclipse.jetty.server.nio.SelectChannelConnector">
                    <property name="port" value="#{appCfg.jettyEnvCfg.port()}"/>
                    <property name="maxIdleTime" value="#{appCfg.jettyEnvCfg.maxIdleTime()}"/>
                    <property name="lowResourcesConnections" value="#{appCfg.jettyEnvCfg.lowResourcesConnections()}"/>
                    <property name="lowResourcesMaxIdleTime" value="#{appCfg.jettyEnvCfg.lowResourcesMaxIdleTime()}"/>
                    <property name="acceptors" value="#{appCfg.jettyEnvCfg.acceptors()}"/>
                    <property name="statsOn" value="#{appCfg.jettyEnvCfg.statsOn()}"/>
                    <property name="acceptQueueSize" value="#{appCfg.jettyEnvCfg.acceptQueueSize()}"/>
                </bean>
            </list>
        </property>
        <property name="handler">
            <bean class="org.eclipse.jetty.server.handler.HandlerList">
                <property name="handlers">
                    <list>
                        <bean class="com.rhythmdiao.handler.BlackListHandler" init-method="init"/>
                        <bean class="com.rhythmdiao.handler.DispatchHandler" init-method="init">
                            <property name="firstCache">
                                <bean class="com.rhythmdiao.cache.jedis.JedisManager"/>
                            </property>
                          </bean>
                        <bean class="org.eclipse.jetty.server.handler.DefaultHandler"/>
                    </list>
                </property>
            </bean>
        </property>
    </bean>
</beans>