<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean name="jedisManager" class="com.rhythmdiao.cache.jedis.JedisManagerHandler"/>
    <bean name="ehCacheManager" class="com.rhythmdiao.cache.ehcache.EHManagerHandler"/>

    <bean name="servletContextHandler" class="org.eclipse.jetty.servlet.ServletContextHandler">
        <property name="contextPath" value="/"/>
    </bean>

    <bean name="server" class="org.eclipse.jetty.server.Server"
          init-method="start" destroy-method="stop">
        <property name="threadPool">
            <bean class="org.eclipse.jetty.util.thread.QueuedThreadPool">
                <property name="minThreads" value="${jetty.minThreads}"/>
                <property name="maxThreads" value="${jetty.maxThreads}"/>
            </bean>
        </property>
        <property name="connectors">
            <list>
                <bean name="connector" class="org.eclipse.jetty.server.nio.SelectChannelConnector">
                    <property name="port" value="${jetty.connector.port}"/>
                    <property name="maxIdleTime" value="${jetty.connector.maxIdleTime}"/>
                    <property name="lowResourcesConnections" value="${jetty.connector.lowResourcesConnections}"/>
                    <property name="lowResourcesMaxIdleTime" value="${jetty.connector.lowResourcesMaxIdleTime}"/>
                    <property name="acceptors" value="${jetty.connector.acceptors}"/>
                    <property name="statsOn" value="${jetty.connector.statsOn}"/>
                    <property name="acceptQueueSize" value="${jetty.connector.acceptQueueSize}"/>
                </bean>
            </list>
        </property>
        <property name="handler">
            <bean class="org.eclipse.jetty.server.handler.HandlerList">
                <property name="handlers">
                    <list>
                        <bean class="com.rhythmdiao.handler.DispatchHandler" init-method="init">
                            <property name="firstCache" ref="ehCacheManager"/>
                            <property name="secondCache" ref="jedisManager"/>
                        </bean>
                        <bean class="org.eclipse.jetty.server.handler.DefaultHandler"/>
                    </list>
                </property>
            </bean>
        </property>
    </bean>
</beans>